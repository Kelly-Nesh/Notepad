<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme.Notepad" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Ensure no default action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- App-wide colors -->
        <item name="colorPrimary">@color/primaryColor</item> <!-- For app bar and key UI elements -->
        <item name="colorPrimaryVariant">@color/primaryColorVariant</item> <!-- For status bar or darker complementary areas -->
        <item name="colorSecondary">@color/secondaryColor</item> <!-- For FAB, highlights, or other accents -->
        <item name="colorOnPrimary">@color/primary_text</item> <!-- Text/icons on primary elements -->
        <item name="colorOnSecondary">@color/primary_text</item> <!-- Text/icons on secondary (accent) elements -->
        <item name="colorSurface">@color/colorSurface</item> <!-- For cards, menus, or surfaces above the background -->
        <item name="colorOnSurface">@color/primary_text</item> <!-- Text/icons on surface backgrounds -->
        <item name="colorError">@color/colorError</item> <!-- For error states or notifications -->
        <item name="colorOnError">@color/colorOnError</item> <!-- Text/icons on error backgrounds -->
        <item name="android:colorBackground">@color/main_bg</item> <!-- Main app background -->
    </style>
</resources>