<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Notepad" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/dark_colorPrimary</item>
        <item name="colorPrimaryVariant">@color/dark_colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/dark_colorOnPrimary</item>
        <item name="colorSecondary">@color/dark_colorSecondary</item>
        <item name="colorSecondaryVariant">@color/dark_colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/dark_colorOnSecondary</item>
        <item name="background">@color/dark_backgroundLight</item>
    </style>

    <style name="Base.Theme.Notepad.AppBarOverlay" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/dark_colorSecondary</item>
        <item name="colorPrimaryVariant">@color/dark_colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/dark_colorOnPrimary</item>
    </style>

    <style name="Base.Theme.Notepad.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="Base.Theme.Notepad.FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/dark_fabColor</item>
        <item name="tint">@color/dark_colorSecondaryVariant</item>
    </style>
</resources>