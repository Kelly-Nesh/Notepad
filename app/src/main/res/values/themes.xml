<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Notepad" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Ensure no default action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/light_colorPrimary</item>
        <item name="colorPrimaryVariant">@color/light_colorPrimaryVariant</item>
        <item name="colorSecondary">@color/light_colorSecondary</item>
        <item name="colorSecondaryVariant">@color/light_colorSecondaryVariant</item>
        <item name="colorOnPrimary">@color/light_colorOnPrimary</item>
        <item name="colorOnSecondary">@color/light_colorOnSecondary</item>
        <item name="colorSurface">@color/light_colorSurface</item>
        <item name="colorOnSurface">@color/light_colorOnSurface</item>
        <item name="colorError">@color/light_colorError</item>
        <item name="colorOnError">@color/light_colorOnError</item>
        <item name="android:colorBackground">@color/light_colorBackground</item>
        <item name="colorOnBackground">@color/light_colorOnBackground</item>
        <item name="popupMenuStyle">@style/CustomPopupMenu</item>
    </style>

    <style name="ToolbarStyle" parent="Theme.Material3.Light">
        <item name="android:background">@color/light_colorPrimary</item>
        <item name="titleTextColor">@color/light_colorOnPrimary</item>
        <item name="colorControlNormal">@color/light_colorOnPrimary</item>
        <item name="actionMenuTextColor">@color/light_colorOnPrimary</item>
    </style>

    <style name="ActionMenuAppearance" parent="Theme.Material3.Light">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomPopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:backgroundTint">@color/light_colorPrimary</item>
        <item name="android:textColor">@color/light_colorOnPrimary</item>
    </style>

    <style name="Base.Theme.Notepad.FAB" parent="ThemeOverlay.Material3.FloatingActionButton.Surface">
        <item name="backgroundTint">@color/light_colorPrimary</item>
        <item name="tint">@color/light_colorOnPrimary</item>
    </style>

    <style name="Theme.Notepad" parent="Base.Theme.Notepad" />
</resources>