<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Notepad" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Ensure no default action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- App-wide colors -->
        <item name="colorPrimary">@color/primaryColor</item> <!-- For app bar and key UI elements -->
        <item name="colorPrimaryVariant">@color/primaryColorVariant</item> <!-- For status bar or darker complementary areas -->
        <item name="colorSecondary">@color/secondaryColor</item> <!-- For FAB, highlights, or other accents -->
        <item name="colorOnPrimary">@color/primary_text</item> <!-- Text/icons on primary elements -->
        <item name="colorOnSecondary">@color/primary_text</item> <!-- Text/icons on secondary (accent) elements -->
        <item name="colorSurface">@color/colorSurface</item> <!-- For cards, menus, or surfaces above the background -->
        <item name="colorOnSurface">@color/primary_text</item> <!-- Text/icons on surface backgrounds -->
        <item name="colorError">@color/colorError</item> <!-- For error states or notifications -->
        <item name="colorOnError">@color/colorOnError</item> <!-- Text/icons on error backgrounds -->
        <item name="android:colorBackground">@color/main_bg</item> <!-- Main app background -->
    </style>

    <style name="ToolbarStyle" parent="Theme.Material3.Light">
        <!-- Toolbar-specific colors -->
        <item name="android:background">@color/primaryColor</item> <!-- Toolbar background -->
        <item name="titleTextColor">@color/secondaryColor</item> <!-- Toolbar title text color -->
        <item name="colorControlNormal">@color/secondaryColor</item> <!-- Normal state of controls on the toolbar -->
        <item name="actionMenuTextColor">@color/secondaryColor</item> <!-- Menu item text color -->
    </style>

    <style name="Base.Theme.Notepad.FAB" parent="ThemeOverlay.Material3.FloatingActionButton.Surface">
        <!-- Floating Action Button -->
        <item name="backgroundTint">@color/secondaryColor</item> <!-- FAB background color -->
        <item name="tint">@color/primaryColorVariant</item> <!-- FAB icon/text color -->
    </style>

    <style name="CustomPopupMenu" parent="Widget.Material3.PopupMenu">
        <!-- Popup menu colors -->
        <item name="android:backgroundTint">@color/colorSurface</item> <!-- Popup menu background -->
        <item name="android:textColor">@color/primary_text</item> <!-- Popup menu text -->
    </style>

    <style name="TextAppearance.Notepad.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name='Widget.Notepad.EditText' parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textColorHint">?attr/colorOnSurface</item>
        <item name="boxBackgroundColor">?attr/colorSurface</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Theme.Notepad" parent="Base.Theme.Notepad" />
</resources>